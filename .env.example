# AI Agent Logistics System Configuration
# Copy this file to .env and update with your settings

# OpenAI Configuration (Optional - for smart chatbot features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///logistics_agent.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Dashboard Configuration
DASHBOARD_PORT=8502

# Agent Configuration
AGENT_INTERVAL=300
CONFIDENCE_THRESHOLD=0.7
AUTO_APPROVAL_ENABLED=true

# Email Configuration (Optional - for notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
COMPANY_EMAIL=company@example.com
COMPANY_NAME=Your Company Name
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Features Toggle
ENABLE_SMART_CHATBOT=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_HUMAN_REVIEW=true
ENABLE_MONITORING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_EMAIL=alerts@example.com

# Performance
MAX_WORKERS=4
CACHE_TTL=300

# Infiverse Integration
INFIVERSE_BASE_URL=http://localhost:5000
INFIVERSE_ENABLED=true