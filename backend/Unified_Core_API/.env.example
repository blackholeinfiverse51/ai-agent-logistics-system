# Unified Core API Configuration

# Environment
ENVIRONMENT=production
PORT=8005

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/unified_db

# Message Broker
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your-production-secret-key-change-this
ENCRYPTION_KEY=your-encryption-key-change-this

# BHIV Core Integration
BHIV_CORE_URL=http://localhost:8002
BHIV_CORE_API_KEY=your-bhiv-api-key

# Compliance
COMPLIANCE_ENABLED=true
SANKALP_COMPLIANCE_URL=http://localhost:8007

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/unified_core.log

# Dashboard
DASHBOARD_URL=http://localhost:3000

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK

# Performance
MAX_WORKERS=4
CACHE_TTL=300
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
