FROM python:3.11-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

COPY requirements.txt .
RUN pip install --no-cache-dir streamlit pandas plotly sqlalchemy requests

COPY . .

EXPOSE 8501

CMD ["streamlit", "run", "unified_dashboard.py", "--server.port=8501", "--server.headless=true"]
