# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DASHBOARD_PORT=8501

# Services to start
SERVICES=api,dashboard,agent,procurement,delivery

# Agent Configuration
AGENT_INTERVAL=300
PROCUREMENT_INTERVAL=3600
DELIVERY_INTERVAL=1800
MONITORING_INTERVAL=60
CONFIDENCE_THRESHOLD=0.7

# Features
ENABLE_SMART_CHATBOT=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_HUMAN_REVIEW=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_RECIPIENTS=admin@company.com,ops@company.com

# Slack Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security
JWT_SECRET_KEY=your-production-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///logistics_agent.db

# Monitoring
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_RPM=30
RATE_LIMIT_BURST=10